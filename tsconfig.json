{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "out",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,

      "lib": ["ES2017"],
      "types": ["node", "ts-expose-internals"]
    },
    "exclude": ["example/**/*", "**/*.ts-output"]
  }
